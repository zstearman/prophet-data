<%= link_to "Previous Day", games_path(date: (params[:date].to_i - 1).to_s) %>
<%= link_to "Next Day", games_path(date: (params[:date].to_i + 1).to_s) %>
<table>
  <thead>
    <tr>
      <th>ESPN ID</th>
      <th>Date</th>
      <th>Home Team</th>
      <th>Away Team</th>
      <th>Score</th>
      <th>Neutral?</th>
    </tr>
  </thead>
  <tbody>
    <% @games.all.each do |game| %>
    <tr>
      <td><%= game.espn_id %></td>
      <td><%= game.date %></td>
      <% if game.home_team %>
        <td><%= link_to game.home_team_name, game.home_team %></td>
      <% else %>
        <td><%= game.home_team_name %></td>
      <% end %>
      <% if game.away_team %>
        <td><%= link_to game.away_team_name, game.away_team %></td>
      <% else %>
        <td><%= game.away_team_name %></td>
      <% end %>
      <td><%= game.home_score.to_s + "-" + game.away_score.to_s %></td>
      <td><%= game.neutral %></td>
    </tr>
    <% end %>
  </tbody>
</table>